!!!
%html
  %head
    %title
      = "Godchat | #{controller_name.capitalize}"
    = stylesheet_link_tag    "engineer/application", :media => "all"
    = csrf_meta_tags
  %body{:class => "#{params[:controller].gsub(/\//, '-')} #{params[:action]}", data: {page: [controller_name.capitalize, action_name.capitalize].join}}
    #wrapper
      = render 'engineer_nav'
      #masthead
        .layover
          .container
            .masthead-pad
              .masthead-text
                = yield :masthead
      = yield :noncontainer
      .content
        .container
          .row
            .col-md-12#emberContainer
              - if flash[:notice]
                .alert.alert-info
                  %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                  = flash[:notice]
              - if flash[:warning]
                .alert
                  %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                  = flash[:warning]
              - if flash[:success]
                .alert.alert-success
                  %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                  = flash[:success]
              - if flash[:error]
                .alert.alert-error
                  %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                  = flash[:error]
              = yield
      #push
    = render 'engineer_footer'
    = javascript_include_tag "engineer/application"
    = yield :scripts
    = airbrake_javascript_notifier